{
    "extends": "./tsconfig.json",
    "include": [
        "app/**/*",
        "worker-configuration.d.ts",
        "vite.d.ts",
        "theme/**/*",
        ".storybook/**/*",
        "styled-system/**/*",
        "stories/**/*"
    ],
    "compilerOptions": {
        "composite": true,
        "strict": true,
        "lib": ["DOM", "DOM.Iterable", "ES2022"],
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "baseUrl": ".",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "types": ["vite/client"]
    }
}
